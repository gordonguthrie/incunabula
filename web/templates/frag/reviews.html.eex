<table class="ui striped table">
  <%= if @reviews == [] do %>
  <tr>
    <td>There are no reviews to show</td>
  </tr>
  <% else %>
  <%= for r <- @reviews do %>
      <tr>
        <td>
          <a href="/books/<%= @slug %>/reviews/<%= r.review_slug %>"><%= r.review_title %></a>
        </td>
        <td><%= r.review_status %></td>
      </tr>
      <% end %>
   <% end %>
</table>
